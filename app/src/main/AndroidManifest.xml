<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.roocky.mojian">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".Mojian"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:value="56fbd72be0f55a493c00288d" android:name="UMENG_APPKEY"/>
        <meta-data android:value="Default" android:name="UMENG_CHANNEL"/>
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
        <activity android:name=".Activity.ViewActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".Activity.AddActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".Activity.CalendarActivity" />
        <receiver android:name=".BroadcastReceiver.RemindReceiver" />
        <!--<receiver android:name=".BroadcastReceiver.FeedbackReceiver" />-->
    </application>

</manifest>
